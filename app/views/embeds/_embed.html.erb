<% generated_id= "embed-" + embed.id.to_s %>
<div class="item_box item_box_embed_link">
  <div class="item_thumbnail">
    <%= link_to(embed_url(embed)) do %>
      <div class="embed_img">
        <img src="/assets/link-circle-fill.png"/>
      </div>
    <%end%>
  </div>
  <div class="item_title">
    <%= link_to(embed_url(embed)) do %>
      <p class="title"><%= embed.title %></p>
    <%end%>
  </div>
  <div class="item_user">
    <div class="d-flex by_date justify-content-between">
      <span class="author">
        <span class="by"><%=t('by')%></span>
        <%= link_to User.find_by(id: embed.owner_id)&.name, user_path(embed.owner_id) if embed.owner_id.present? %>
      </span>
      <span><%= embed.created_at.strftime('%d/%m/%Y') %></span>
    </div>
  </div>
  <div id="delete_link">
    <a href="<%=polymorphic_path(embed)%>" data-confirm="<%=t('dictionary.are_you_sure')%>" data-ok-button="<%=t('dictionary.ok')%>" data-cancel-button="<%=t('dictionary.cancel')%>" data-method="delete" rel="nofollow">
      <button class="movle_button"><span title='<%=t("dictionary.delete")%>' class="glyphicon glyphicon-trash"></span></button>
    </a>
  </div>
</div>
